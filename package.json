{
  "private": true,
  "workspaces": [
    "backend/lambdas/*",
    "frontend/*",
    "shared",
    "infrastructure"
  ],
  "scripts": {
    "build:shared": "yarn workspace @my-app/shared build",
    "build:frontend-shared": "yarn workspace @my-app/frontend-shared build",
    "build:remotes": "concurrently \"yarn workspace task-form build\" \"yarn workspace task-list build\"",
    "preview:form": "yarn workspace task-list preview --port 5001 --strictPort",
    "preview:list": "yarn workspace task-form preview --port 5002 --strictPort",
    "dev:host": "yarn workspace host dev",
    "dev:simulate": "yarn build:shared && yarn build:frontend-shared && yarn build:remotes && concurrently -k -n \"FORM,LIST,HOST\" -c \"magenta,blue,green\" \"yarn preview:form\" \"yarn preview:list\" \"yarn dev:host\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
