{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "bin/**", "lib/**"]
    },
    "@my-app/shared#build": {
      "outputs": []
    },
    "@my-app/frontend-shared#build": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalEnv": ["VITE_*"]
}
